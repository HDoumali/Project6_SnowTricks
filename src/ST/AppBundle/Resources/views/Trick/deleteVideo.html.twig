{% extends "STAppBundle::layout.html.twig" %}

{% block title %}
	Supprimer une video - {{ parent() }}
{% endblock %}

{% block body %}

	<div class="container">
	    <div class="delete_video">

			<h4><i class="far fa-trash-alt"></i> Supprimer une video</h4>

			<p>Etes-vous sur de vouloir supprimer la vidéo n° {{ video.id }} de la figure {{ video.trick.name|upper }} ?</p>

			<form action="{{ path('st_app_delete_video', {'id' : video.id}) }}" method="POST">
				<a href="{{ path('st_app_edit', {'id' : video.trick.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span> Revenir à la figure</a> 
				<input type="submit" value="Supprimer" class="btn btn-danger">
				{{ form_rest(form) }}
			</form>
			<br />

			<p><span class="label label-warning">Warning</span> Cette video sera supprimée définitivement de la figure associée.</p>
		</div>
	</div>
	
{% endblock %}