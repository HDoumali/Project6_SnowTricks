{% extends "STAppBundle::layout.html.twig" %}

{% block title %}
	Supprimer une figure - {{ parent() }}
{% endblock %}

{% block body %}

	<h3>Supprimer une figure</h3>

	<p>Etes-vous sur de vouloir supprimer la figure "{{ trick.name }}"</p>

	<form action="{{ path('st_app_delete', {'id' : trick.id}) }}" method="POST">
		<a href="{{ path('st_app_home') }}" class="btn btn-default">Revenir à la page d'accueil</a> 
		<input type="submit" value="Supprimer" class="btn btn-danger">
		{{ form_rest(form) }}
	</form>

	<p>ATTENTION : Cette figure sera supprimée définitivement de la liste</p>
	
{% endblock %}