{% extends "STAppBundle::layout.html.twig" %}

{% block title %}
	Modification de l'image - {{ parent() }}
{% endblock %}

{% block body %}

	<h3>Vous souhaitez modifier l'image</h3>

<div class="well">
	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}

  {# Idem pour un autre champ. #}
  <div class="form-group">
    {{ form_label(form.file, "Image", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.file) }}
    <div class="col-sm-10">
      {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
    </div>
  </div>

  {{ form_rest(form) }}

  {{ form_widget(form.Modifier, {'attr': {'class': 'btn btn-primary'}}) }}
  
  {{ form_end(form) }}
</div>

<p>la modification sera visible directement après validation du formulaire</p>
	
{% endblock %}