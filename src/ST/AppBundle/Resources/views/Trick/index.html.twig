{% extends "STAppBundle::layout.html.twig" %}

{% block title %}
	Accueil - {{ parent() }}
{% endblock %}

{% block body %}

	
    <div class="container" id="img-presentation">
        <div class="row">
            <div class="col-lg-12">
                <div class="intro-text">
                    <h1>Bienvenue sur SnowTricks</h1>
                </div>
            </div>
        </div>
    </div>
   
   {% if is_granted('ROLE_USER') %}
   		<a href="{{ path('st_app_add') }}"><h4><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Ajouter une figure</h4></a>
   {% endif %}

    <div class="container">

    	 <div>
		    {% for message in app.session.flashbag.get('message') %}
		      <p>Message flash : {{ message }}</p>
		    {% endfor %}
         </div>

		<div class="row">
			{% for trick in listTricks%}
			<div class="col-md-2">
				<div class="thumbnail">
					{% for picture in trick.pictures %}
							{% if loop.first %}
		                    	<img src="{{ asset(picture.webPath) }}" alt="{{ picture.alt }}">
		                    {% endif %}
		                    {% else %}
		                    	<img src="{{ asset('img/default.jpg') }}" alt="imgdefault">
	                {% endfor %}
					<div class="caption">
						<a href="{{ path('st_app_view', {'slug': trick.slug}) }}"><h3>{{ trick.name }}</h3></a>
						<a href="{{ path('st_app_edit', {'id': trick.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
						<a href="{{ path('st_app_delete', {'id': trick.id}) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
				    </div>
				</div>
			</div>
		    {% endfor %}
	    </div>


	    
    </div>
{% endblock %}