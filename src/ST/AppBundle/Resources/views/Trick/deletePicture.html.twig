{% extends "STAppBundle::layout.html.twig" %}

{% block title %}
	Supprimer une image - {{ parent() }}
{% endblock %}

{% block body %}

	<div class="container">
	    <div class="delete_picture">

			<h4><i class="far fa-trash-alt"></i> Supprimer une image</h4>

			<p>Etes-vous sur de vouloir supprimer l'image n° {{ picture.id }} de la figure {{ picture.trick.name|upper }} ?</p>

			<form action="{{ path('st_app_delete_picture', {'id' : picture.id}) }}" method="POST">
				<a href="{{ path('st_app_edit', {'id' : picture.trick.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-triangle-left" aria-hidden="true"></span> Revenir à la figure</a> 
				<input type="submit" value="Supprimer" class="btn btn-danger">
				{{ form_rest(form) }}
			</form>
			<br />

			<p><span class="label label-warning">Warning</span> Cette image sera supprimée définitivement de la figure associée.</p>
		</div>
	</div>
	
{% endblock %}