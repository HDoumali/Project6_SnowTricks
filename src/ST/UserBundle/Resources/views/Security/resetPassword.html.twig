{% extends "STAppBundle::Layout.html.twig" %}

{% block title %}
  Changement de mot de passe - {{ parent() }}
{% endblock %}

{% block body %}

  <div class="container">
    <div class="form_reset_password col-md-6 col-md-offset-3">

        <h3>Changement de mot de passe</h3>

        <p>Monsieur {{ user.username }} vous etes sur le point de changer votre mot de passe !</p>

        <div class="well">
          	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.plainPassword.first, "Nouveau mot de passe", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.plainPassword.first) }}
                <div class="col-sm-10">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.plainPassword.second, "Répétez votre mot de passe", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.plainPassword.second) }}
                <div class="col-sm-10">
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            {{ form_rest(form) }}

            <div class="btn_form">
                <input type="submit" value="Valider" class="btn" />
            </div>

            {{ form_end(form) }}
        </div>
    </div>
  </div>

{% endblock %}