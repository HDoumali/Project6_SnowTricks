{% extends "STAppBundle::layout.html.twig" %}

{% block title %}
  Mot de passe oublié - {{ parent() }}
{% endblock %}

{% block body %}

  <div class="container">
    <div class="form_forgot_password col-md-6 col-md-offset-3">

        <h3>Mot de passe oublié</h3>

        <div class="well">
          	{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.username) }}
                <div class="col-sm-10">
                    {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            {{ form_rest(form) }}

            <div class="btn_form">
                <input type="submit" value="Valider" class="btn" />
            </div>

            {{ form_end(form) }}
        </div>
    </div>
  </div>

{% endblock %}