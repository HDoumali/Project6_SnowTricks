{% extends "STAppBundle::layout.html.twig" %}

{% block body %}

	<div class="container">
		<div class="profile">

		  <h3>Bienvenue sur votre profil "{{ app.user.username }}"</h3>
		  <br />
          <div class="row">
			  <div class="col-xs-5 col-sm-2 col-md-2">
			  		<img src="{{ asset(app.user.picture.webPath) }}" alt="{{ app.user.picture.alt }}" style="width: 100%" class="img-rounded">
			  </div>
			  <div class="col-xs-7 col-sm-10 col-md-10">
				  	<h4>{{ app.user.firstname }} {{ app.user.lastname }}</h4>
				  	<hr>
				  	<p>Nom d'utilisateur : {{ app.user.username }}</p>
				  	<p>Adresse email : {{ app.user.email }}</p>
			  </div>
		  </div>
		</div>
	</div>

{% endblock %}